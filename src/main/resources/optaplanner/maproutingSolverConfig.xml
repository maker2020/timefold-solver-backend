<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://www.optaplanner.org/xsd/solver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.optaplanner.org/xsd/solver https://www.optaplanner.org/xsd/solver/solver.xsd">
  <!-- To slowly prove there are no bugs in this code -->
  <!--<environmentMode>FULL_ASSERT</environmentMode>-->
  <!-- To solve faster by saturating multiple CPU cores -->
  <!--<moveThreadCount>AUTO</moveThreadCount>-->

  <solutionClass>com.keyvalues.optaplanner.maprouting.domain.MapRoutingSolution</solutionClass>
  <entityClass>com.keyvalues.optaplanner.maprouting.domain.RoutingEntity</entityClass>

  <scoreDirectorFactory>
    <constraintProviderClass>com.keyvalues.optaplanner.maprouting.solver.MapRoutingConstraintProvider</constraintProviderClass>
    <initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>
  </scoreDirectorFactory>

  <!-- <termination>
    <secondsSpentLimit>3</secondsSpentLimit>
  </termination> -->

  <constructionHeuristic>
      <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
  </constructionHeuristic>

  <!-- 配置为本地搜索算法 -->
  <localSearch>
      <termination>
          <unimprovedSecondsSpentLimit>5</unimprovedSecondsSpentLimit>
      </termination>
      <!-- 交换枚举，相比较贪婪启发更暴力 -->
      <!-- <moveListFactory>
           <moveListFactoryClass>com.keyvalues.optaplanner.maprouting.solver.move.PermutationMoveFactory</moveListFactoryClass>
      </moveListFactory> -->
  </localSearch>

</solver>
