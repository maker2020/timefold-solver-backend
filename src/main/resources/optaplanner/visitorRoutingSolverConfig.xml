<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://www.optaplanner.org/xsd/solver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.optaplanner.org/xsd/solver https://www.optaplanner.org/xsd/solver/solver.xsd">
  <!-- To slowly prove there are no bugs in this code -->
  <!--<environmentMode>FULL_ASSERT</environmentMode>-->
  <!-- To solve faster by saturating multiple CPU cores -->
  <!--<moveThreadCount>AUTO</moveThreadCount>-->

  <solutionClass>cn.keyvalues.optaplanner.maprouting.domain.VisitorRoutingSolution</solutionClass>
  <entityClass>cn.keyvalues.optaplanner.maprouting.domain.Visitor</entityClass>
  <entityClass>cn.keyvalues.optaplanner.maprouting.domain.Customer</entityClass>

  <scoreDirectorFactory>
    <constraintProviderClass>cn.keyvalues.optaplanner.maprouting.solver.VisitorRoutingConstraint</constraintProviderClass>
    <initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>
  </scoreDirectorFactory>

  <termination>
    <!-- <minutesSpentLimit>5</minutesSpentLimit> -->
    <secondsSpentLimit>7</secondsSpentLimit>
  </termination>
  <constructionHeuristic>
  </constructionHeuristic>
  <localSearch>
    <!-- <unionMoveSelector>
      <kOptListMoveSelector>
        <originSelector id="5"/>
        <valueSelector>
          <nearbySelection>
            <originValueSelector mimicSelectorRef="5"/>
            <nearbyDistanceMeterClass></nearbyDistanceMeterClass>
            <nearbySelectionDistributionType>PARABOLIC_DISTRIBUTION</nearbySelectionDistributionType>
            <parabolicDistributionSizeMaximum>40</parabolicDistributionSizeMaximum>
          </nearbySelection>
        </valueSelector>
      </kOptListMoveSelector>
    </unionMoveSelector> -->
    <termination>
      <unimprovedSecondsSpentLimit>120</unimprovedSecondsSpentLimit>
    </termination>
    <!-- 需要稳定展示解，可以打开该配置 -->
    <!-- 配置备选解阀值 -->
    <acceptor>
      <lateAcceptanceSize>200</lateAcceptanceSize>
    </acceptor>
    <!-- 解选择，只接受一个最终解 -->
    <forager>
      <acceptedCountLimit>1</acceptedCountLimit>
    </forager>
  </localSearch>
</solver>
